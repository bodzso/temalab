<Page
    x:Class="temalab.UserMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:temalab"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White"
    Foreground="Black">
    <!-- Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"-->

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Spacing="3">
            <TextBlock Text="Balance:" FontSize="30" Width="125"/>
            <TextBlock Text="{x:Bind BalanceString}" FontSize="35" FontWeight="Bold" VerticalAlignment="Top"/>
            <Button Background="Gray" Width="32" Height="32" HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" x:Name="plusButton" Click="PlusButton_Click">
                <Image Source="Assets\Buttons\plus.png" Margin="-10,-10,-11,-11"/>
            </Button>
            <Button Background="Gray" Width="32" Height="32" HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" x:Name="minusButton" Click="MinuButton_Click">
                <Image Source="Assets\Buttons\minus.png" Margin="-10,-10,-11,-11"/>
            </Button>
        </StackPanel>
    </StackPanel>


</Page>
